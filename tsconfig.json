{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs", 
    "lib":[
      "es2018",
      "esnext.asynciterable"
    ],
    "allowJs": true,                             
    "outDir": "./dist",                              
    "rootDir": "./src", 
    "sourceMap": true,                            
    "removeComments": true,                      
    "strict": false,                                 
    "typeRoots": [
      "./node_modules/@types"
    ],                             
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["../controllers/*"]
    }
  },
  "include": [        
    "**/*.ts",
      "*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "buildOnSave": true,
  "compileOnSave": true
}
