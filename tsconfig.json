{
  "compilerOptions": {
    "target": "es6",                                
    "module": "commonjs",                           
    "allowJs": true,                             
    "outDir": "./dist",                              
    "rootDir": "./src",                             
    "removeComments": true,                      
    "strict": true,                                 
    "typeRoots": [
      "./node_modules/@types"
    ],                             
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["./src/controllers/*"]
    }
  }
}
